<Window x:Class="Vistas.BuscarDocente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Vistas.ControlUsuario"
        Title="Buscar Docente" Height="650" Width="623" Background="#f8f0ec"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ENCABEZADO CON TÍTULO Y LOGO -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- TÍTULO PRINCIPAL CENTRADO -->
            <Label Content="EDITAR DOCENTE" 
                   Style="{StaticResource LabelTitulo}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Column="0" Grid.ColumnSpan="2"/>

            <!-- LOGO EN ESQUINA SUPERIOR DERECHA -->
            <Image Source="/Images/logo-lujan.png" Grid.Column="1"
                   Width="60" Height="60" 
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </Grid>

        <!-- PANEL DE BÚSQUEDA -->
        <Border Grid.Row="1" Margin="20,10,20,20" CornerRadius="10" 
                Background="White" BorderBrush="{StaticResource BordeBrush}" 
                BorderThickness="1" Height="80">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Buscar por ID o DNI:" 
                       Style="{StaticResource CustomLabel}" 
                       VerticalAlignment="Center" Grid.Column="0" Margin="0,0,15,0"/>

                <TextBox Name="txtBusqueda" Grid.Column="1" 
                         Height="45" Margin="0,0,15,0"
                         Style="{StaticResource txt_plantillaStyle}" 
                         VerticalAlignment="Center"
                         KeyDown="txtBusqueda_KeyDown"/>

                <Button Name="btnBuscar" Content="Buscar" Grid.Column="2"
                        Width="100" Height="40"
                        Style="{StaticResource btnAceptar}"
                        Click="btnBuscar_Click"/>
            </Grid>
        </Border>

        <!-- CONTROL DE DOCENTE PARA MOSTRAR DATOS -->
        <control:AltaDocente x:Name="AltaDocente" Grid.Row="2"
                           Margin="0,5,0,0"/>

        <!-- BOTONES CENTRADOS -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,0">
            <Button Name="btnEliminar" Content="Eliminar" Width="120" Height="40"
                    Style="{StaticResource btnCancelar}" 
                    Click="btnEliminar_Click" Margin="0,0,15,0" IsEnabled="False" />

            <Button Name="btnActualizar" Content="Actualizar" Width="120" Height="40"
                    Style="{StaticResource btnAceptar}" 
                    Click="btnActualizar_Click" Margin="0,0,15,0"/>

            <Button Name="btnCancelar" Content="Cancelar" Width="120" Height="40"
                    Style="{StaticResource btnCancelar}" 
                    Click="btnCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>
